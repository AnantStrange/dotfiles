alias gdisk="lsblk -o 'NAME,MOUNTPOINTS,fsused,fsuse%,fsavail,SIZE,FSTYPE,PARTLABEL,PARTUUID'"
alias ".."="cd .."
alias "..."="cd ../.."

mkcd() {
    mkdir -p "$1" && cd "$1" || return
}
