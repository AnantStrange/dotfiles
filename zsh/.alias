# ls Alises based on if eza available

if eza > /dev/null 2>&1;then
    alias ls='ls --color=auto'
    alias ll="eza -lgH --icons"
    alias la="eza -lagH --icons"
    alias l="eza -HG --icons"
else
    alias ls='ls --color=auto'
    alias ll="ls -lgH"
    alias la="ls -lagH"
    alias l="ls -HG"
fi

# Trash-cli Alias

alias tp="trash-put"
